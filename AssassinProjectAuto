local Get_Target = function()
    local Target = nil
    local TargetName = nil
    pcall(function()
        TargetName = game.Players.LocalPlayer.PlayerGui.ScreenGui.UI.Target.PlayerText.Text
    end)
    if TargetName then
        if game:GetService("Players"):FindFirstChild(TargetName) then
            if game:GetService("Players"):FindFirstChild(TargetName).Name == game:GetService("Players").LocalPlayer.Name then
                Target = nil;
            else
                Target = game:GetService("Players"):FindFirstChild(TargetName)
            end
        end
    end
    return Target
end

local Remote = function(Arg1, Arg2, Arg3)
    return game:GetService("ReplicatedStorage").Remotes.KillPlayer:FireServer(Arg1, Arg2, Arg3)
end

spawn(function()
    game:GetService("RunService").RenderStepped:Connect(function()
        if game:GetService("Players").LocalPlayer.PlayerGui.ScreenGui.UI.Target.Visible == true then
            game:GetService("Players").LocalPlayer.Character.HumanoidRootPart.CFrame = Get_Target().Character.HumanoidRootPart.CFrame * CFrame.new(0,0,-2.5)
            Remote(Get_Target(),game:GetService("Players").LocalPlayer.Character.Knife.Handle,"Stab")
        end
    end)
end)

spawn(function()
    local toolname = "Knife"
    local Plr = game:GetService("Players").LocalPlayer
    while wait() do
        pcall(function()
            if Plr.Backpack:FindFirstChild(toolname) and Plr.Character:FindFirstChild(toolname) == nil then
                local tool = Plr.Backpack:FindFirstChild(toolname)
                Plr.Character.Humanoid:EquipTool(tool)
            end
        end)
    end
end)
